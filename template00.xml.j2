<domain type='kvm'>
  <name>{{ new_guest.name }}</name>
  <uuid>{{ new_guest.id }}</uuid>
  <metadata>
    <libosinfo:libosinfo xmlns:libosinfo="http://libosinfo.org/xmlns/libvirt/domain/1.0">
      <libosinfo:os id="http://ubuntu.com/ubuntu/19.04"/>
    </libosinfo:libosinfo>
