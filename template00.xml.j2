  <memory unit='KiB'>{{ new_guest.ram }}</memory>
  <currentMemory unit='KiB'>{{ new_guest.ram }}</currentMemory>
  <vcpu placement='static'>{{ new_guest.cpu }}</vcpu>
  <os>
    <type arch='x86_64' machine='pc-q35-4.0'>hvm</type>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
    <apic/>
  </features>
  <cpu mode='host-passthrough' check='none'/>
  <clock offset='utc'>
    <timer name='rtc' tickpolicy='catchup'/>
    <timer name='pit' tickpolicy='delay'/>
    <timer name='hpet' present='no'/>
